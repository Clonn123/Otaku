<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.hse.otaku">
    <uses-sdk
        android:targetSdkVersion="33"
        android:maxSdkVersion="30"
        tools:overrideLibrary="androidx.appcompat"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/anime_manager_icon"
        android:roundIcon="@mipmap/anime_manager_icon_round"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.hse.otaku.DetailActivity"
            android:label="@string/detail_view"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewUser"
            android:label="@string/my_animes"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewNameDesc"
            android:label="@string/name_desc"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewNameAsc"
            android:label="@string/name_asc"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewScoreDesc"
            android:label="@string/score_desc"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewScoreAsc"
            android:label="@string/score_asc"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.SettingsActivity"
            android:exported="false" />

        <activity
            android:name="org.hse.otaku.AnimeViewActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.hse.otaku.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7638828914626114~7039476170"/>

    </application>

</manifest>
